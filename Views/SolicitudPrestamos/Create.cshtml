@model BancoApp.Models.SolicitudPrestamo

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Solicitud Prestamo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodigoPrestamo" class="control-label"></label>
                <input asp-for="CodigoPrestamo" class="form-control" />
                <span asp-validation-for="CodigoPrestamo" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
