@model BancoApp.Models.Cliente
<h1>Login</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" asp-controller="Home">
            <div class="form-group">
                <label asp-for="numeroDocumento" class="control-label"></label>
                <input asp-for="numeroDocumento" class="form-control" placeholder="Documento" />
                <span asp-validation-for="numeroDocumento" class="text-danger"></span>
            </div>
                
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-controller="Cliente" asp-action="Create">Registrarte</a>




</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}